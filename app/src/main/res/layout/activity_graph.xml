        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/grey">

                </com.github.mikephil.charting.charts.LineChart>

                <TextView
                    android:id="@+id/textViewInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/abril_fatface"
                    android:text="@string/subheader"
                    android:textColor="@color/material_dynamic_neutral50"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textViewMaxPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/abril_fatface"
                    android:text="@string/max_value"
                    android:textColor="@color/material_dynamic_neutral50"
                    android:textSize="16sp"
                    tools:text="Максимальная цена: 100" />

                <TextView
                    android:id="@+id/textViewMinPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/abril_fatface"
                    android:text="@string/min_value"
                    android:textColor="@color/material_dynamic_neutral50"
                    android:textSize="16sp"
                    tools:text="Минимальная цена: 10" />

        </LinearLayout>

        <Button
            android:id="@+id/draw_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#00b784"
            android:insetLeft="4dp"
            android:insetTop="6dp"
            android:insetRight="4dp"
            android:insetBottom="6dp"
            android:text="@string/draw_button"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:cornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            tools:ignore="VisualLintButtonSize"
            tools:layout_editor_absoluteX="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>